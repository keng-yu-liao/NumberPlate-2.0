<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellow">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/line_choose_seperate"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/img_choose_remote"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_remote_controler"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_choose_remote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/choose_remote_control"
        android:textSize="30sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="@+id/img_choose_remote"
        app:layout_constraintStart_toStartOf="@+id/img_choose_remote"
        app:layout_constraintTop_toBottomOf="@+id/img_choose_remote" />


    <ImageView
        android:id="@+id/img_choose_calling_pad"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_choose_calling_pad"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/ic_pad"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_choose_calling_pad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/choose_calling_pad"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_choose_calling_pad"
        app:layout_constraintStart_toStartOf="@+id/img_choose_calling_pad" />

</androidx.constraintlayout.widget.ConstraintLayout>